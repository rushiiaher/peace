# Database Configuration
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/lmsdb

# Authentication
# Run `openssl rand -base64 32` to generate a secure secret
JWT_SECRET=your_secure_jwt_secret_here

# Razorpay Configuration (Get these from your Razorpay Dashboard)
RAZORPAY_KEY_ID=rzp_live_xxxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=xxxxxxxxxxxxxxxxxxxxxxxx
# Public key MUST start with NEXT_PUBLIC_ for client-side access
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_live_xxxxxxxxxxxxxx

# Environment
NODE_ENV=production
